CREATE TABLE standard_standings (
team_id VARCHAR(3),
season_id SMALLINT,
g SMALLINT,
w SMALLINT,
l SMALLINT,
win_pct DECIMAL(4,3),
h_g SMALLINT,
h_w SMALLINT,
h_l SMALLINT,
h_win_pct DECIMAL(4,3),
v_g SMALLINT,
v_w SMALLINT,
v_l SMALLINT,
v_win_pct DECIMAL(4,3),
PRIMARY KEY (team_id,season_id)
);

CREATE TABLE standard_world_series (
season_id SMALLINT,
game_type VARCHAR(15),
winning_team CHAR(3),
losing_team CHAR(3),
series_games TINYINT,
PRIMARY KEY (season_id)
);
